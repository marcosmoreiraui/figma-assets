{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "built"
  ]
}
